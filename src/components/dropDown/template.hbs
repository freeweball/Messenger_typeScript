<div class="dropDown {{ classes }}">
    <ul class="dropDown__list">
        <li class="dropDown__item dropDown__item--addUser">
            {{{ buttonAdd }}}
            <div class="dropDown__item-text">Добавить пользователя</div>
        </li>
        <li class="dropDown__item dropDown__item--delUser">
            {{{ buttonDel }}}
            <div class="dropDown__item-text">Удалить пользователя</div>
        </li>
        <li class="dropDown__item dropDown__item--addPhoto">
            {{{ buttonPhoto }}}
            <div class="dropDown__item-text">{{ photo }}</div>
            <div class="dropDown__file">
                <input type="file" name="file">
            </div>
        </li>
        <li class="dropDown__item dropDown__item--addFile">
            {{{ buttonFile }}}
            <div class="dropDown__item-text">{{ file }}</div>
            <div class="dropDown__file">
                <input type="file" name="file">
            </div>
        </li>
        <li class="dropDown__item dropDown__item--addLocation">
            {{{ buttonLocation }}}
            <div class="dropDown__item-text">{{ location }}</div>
            <div for="file" class="dropDown__file">
                <input type="file" name="file">
            </div>
        </li>
    </ul>
</div>
